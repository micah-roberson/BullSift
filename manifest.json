{
  "manifest_version": 2,
  "name": "Simple Chrome Extension",
  "version": "0.0.1",
  "description": "Chrome extension to generate text using Cohere API.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}