{
  "manifest_version": 3,
  "name": "Bullsift",
  "description": "Sifting through the bull to find the facts.",
  "version": "0.0.1",
  "action": {
    "default_icon": "bullsift1.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}