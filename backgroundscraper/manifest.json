{
  "manifest_version": 3,
  "name": "Icon Changer with URL Tracker",
  "description": "A Chrome extension that changes its icon with a button click and tracks the URL.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/bullsift1-16.png",
      "48": "icons/bullsift1-48.png",
      "128": "icons/bullsift1-128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage"
  ],  
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/bullsift1-16.png",
    "48": "icons/bullsift1-48.png",
    "128": "icons/bullsift1-128.png"
  }
}

